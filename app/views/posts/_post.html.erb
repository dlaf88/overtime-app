<tr>
	<th scope="row"><%= post.id %></th>
	<td><%= post.overtime_request %></td>
	<td><%= post.date %></td>
	<td><%= post.user.full_name %></td> 
	<td><%= link_to truncate(post.rationale), post_path(post) %></td>
 	<td><%= status_label post.status %> </td>    
	<td><%= link_to "",edit_post_path(post),class: 'glyphicon glyphicon-pencil glypy', id: "edit_#{post.id}" if policy(post).update? %></td> 
	<td><%= link_to "",post_path(post),method: :delete, class: 'glyphicon glyphicon-trash glypy', id: "destroy_post_#{post.id}",data: {confirm: "Are you sure?"} %></td>  
</tr>  