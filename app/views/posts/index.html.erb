<h1>These are the current Posts.</h1>
<br>
<table class="table">
  <thead>
    <tr>
      
      <th>Post</th>
      <th>Date</th>
      <th>User Last name</th>      
      <th>Rationale</th>

    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post|  %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td><%= post.date %></td>
      <td><%= post.user.last_name %></td> 
      <td><%= post.rationale %></td>      
    </tr>  
   <% end %> 
  </tbody>
</table>