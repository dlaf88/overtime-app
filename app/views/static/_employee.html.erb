
	<h1>Hello <%= current_user.full_name %>.</h1>
	<br>
	<div class="row well">
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-clock-o fa-5x"></i>

                                </div>
                                <div class="col-xs-9 text-center">
                                    <div><span style='font-size: 1.5em'> Report New Overtime.</span></div>
                                </div>
                            </div>
                        </div>
                        <a href="#">
                            <div class="panel-footer">                                
                                 <%= link_to "Report New Overtime", new_post_path , class: 'btn btn-danger btn-sm pull-left' %>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
               <% @audit_logs.each do |audit_log| %>
				<div class="col-lg-3 col-md-6">
				    <div class="panel panel-green">
				        <div class="panel-heading">
				            <div class="row">
				                <div class="col-xs-3">
				                    <i class="fa fa-file-o fa-2x"></i>
				                    <span><b><%= audit_log.user.full_name %></b> </span>
				                </div>
				                <div class="col-xs-9 text-right">
				                    <div>Week of: <%= audit_log.start_date.strftime('%x') %></div>
				                    <div><b><%= audit_log.status %></b></div>
				                </div>
				            </div>
				        </div> 
				        	<div class='text-center'> By clicking this button you confirm that you did not have overtime the week of <%= audit_log.start_date.strftime('%x') %>. </div>
				        
				            <div class="panel-footer">	

				            <%= link_to "No Overtime the week of #{audit_log.start_date.strftime('%x')}", confirm_audit_log_path(audit_log), class: 'btn btn-info btn-sm pull-left',id: "confirm_audit_#{audit_log.id}",data:{confirm: "Are you sure?"} %>
				           	           	                 			                   
				             <div class="clearfix"></div>
				            </div>
				        </a>
				        
				    </div>
				</div>	
			<% end %>
              
    </div>




